<section class="py-8">
    <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
        <nav id="articles" class="w-full z-30 top-0 px-6 py-1">
            <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">
                <p class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl">
                    News Below
                </p>
                <div class="flex items-center">
                    <a href="/scrape">
                        <button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                            Check for New Articles
                        </button>
                    </a>
                </div>
            </div>
        </nav>
        {{#if article}}
        {{#each article}}
        <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">

            <a href={{link}}>
                <img class="hover:grow hover:shadow-lg" src={{img}}>
            </a>

            <div class="pt-3 flex items-center justify-between">
                <p class="">{{title}}</p>
            </div>

            <div class="pt-3 flex items-center justify-between">
                {{#if saved}}
                <button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <a class="btn saved-button" data-toggle="tooltip" data-placement="right" title={{title}}><i
                            class="fas fa-star" data-state="true" data-id={{_id}}></i></a></button>
                <button class="modal-open bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <a class="btn saved-button" data-toggle="tooltip" data-placement="right" title={{title}}>
                        Add Note
                    </a>
                </button>
                {{else}}
                <button type="button" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                    <i class="far fa-star" data-state="false" data-id={{_id}}></i>
                </button>
                <button class="addNote-open bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"> Add Note </button>
                {{/if}}
            </div>
                {{#if note}}
                    <div class="my-4 shadow-md">
                        <div class="tab w-full overflow-hidden border-t">
                            <input class="note absolute opacity-0" data-id={{_id}} id="tab-single-one" type="radio" name="tabs2">
                            <label class="block p-5 leading-normal cursor-pointer" for="tab-single-one">View
                                Note</label>
                                {{#each Note}}
                                    <div class="tab-content overflow-hidden border-l-2 bg-gray-100 border-indigo-500 leading-normal">
                                        <p class="p-5"> {{body}} </p>
                                    </div>
                                {{/each}}
                        </div>
                    </div>
                {{/if}}
        </div>
        {{/each}}

        {{else}}
        <h3 class="text-center"> {{nothing}} </h3>
        {{/if}}
    </div>
</section>

