        <section class="py-8">
            <div class="container mx-auto flex items-center flex-wrap pt-4 pb-12">
                <nav id="articles" class="w-full z-30 top-0 px-6 py-1">
                    <div class="w-full container mx-auto flex flex-wrap items-center justify-between mt-0 px-2 py-3">
                        <p class="uppercase tracking-wide no-underline hover:no-underline font-bold text-gray-800 text-xl"> News Below </p>
                        <div class="flex items-center">
                            <a href="/scrape"><button class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"> New Articles </button></a>
                        </div>
                    </div>
                </nav>

            {{#each article}}
                <div class="w-full md:w-1/3 xl:w-1/4 p-6 flex flex-col">
                    <a href={{link}}> 
                        <img class="hover:grow hover:shadow-lg" src={{img}}>
                    </a>
                    <div class="pt-3 flex items-center justify-between">
                        <p class="">{{title}}</p>
                        <a href="/save">
                            <div class="h-6 w-6 fill-current text-gray-500 hover:text-black"> Save </div>
                        </a>
                    </div>
                </div>
            {{/each}}
            </div>
        </section>